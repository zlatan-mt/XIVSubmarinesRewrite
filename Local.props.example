<Project>
  <PropertyGroup>
    <!-- Dalamud dev hooks のパスを指定。環境変数 $(APPDATA) を使うと環境差分を吸収できます。-->
    <!-- 例 (Windows): $(APPDATA)\XIVLauncher\addon\Hooks\dev -->
    <!-- 例 (WSL): /mnt/c/Users/<User>/AppData/Roaming/XIVLauncher/addon/Hooks/dev -->
    <DalamudLibPath>$(APPDATA)\XIVLauncher\addon\Hooks\dev</DalamudLibPath>
  </PropertyGroup>
  <PropertyGroup>
    <!-- 開発用コピー先 (任意)。WSL を利用する場合は /mnt/c/... 形式も設定可能。-->
    <!-- 例: $(APPDATA)\XIVLauncher\devPlugins\XIVSubmarinesRewrite -->
    <DevPluginsDir>$(APPDATA)\XIVLauncher\devPlugins\XIVSubmarinesRewrite</DevPluginsDir>
  </PropertyGroup>
</Project>
